<h1>Adding comment</h1>

<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
	<%= f.label :comment %><br />
	<%= f.text_area :comment %>
	</div>
	<div class="actions"><%= f.submit "Add Comment" %></div>
<% end %>
